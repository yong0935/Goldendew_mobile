<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="결혼기념일/결혼예정일"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <CheckBox
        android:id="@+id/chk_DM"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:text="Y"
        app:layout_constraintStart_toEndOf="@+id/chk_EMAIL"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <CheckBox
        android:id="@+id/chk_TM"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Y"
        app:layout_constraintStart_toStartOf="@+id/chk_DM"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <CheckBox
        android:id="@+id/chk_SMS"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="Y"
        app:layout_constraintStart_toStartOf="@+id/chk_EMAIL"
        app:layout_constraintTop_toBottomOf="@+id/chk_EMAIL" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="문자메시지"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="카탈로그"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:text="전화"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/chk_EMAIL"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <EditText
        android:id="@+id/et_EMAIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="이메일주소"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/et_TXADDR2" />

    <EditText
        android:id="@+id/et_STORE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/et_RESIDENT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="법정생년월일(6자리)"
        android:inputType="number"
        android:maxLength="6"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/et_STORE" />

    <EditText
        android:id="@+id/et_CELLPHONE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="휴대전화번호"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/et_RESIDENT1" />

    <EditText
        android:id="@+id/et_TXADDR1"
        android:layout_width="510dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="주소"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/et_CELLPHONE" />

    <EditText
        android:id="@+id/et_TXADDR2"
        android:layout_width="510dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="상세주소"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/et_TXADDR1" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="168dp"
        android:layout_height="53dp"
        android:layout_marginStart="468dp"
        android:layout_marginLeft="468dp"
        android:text="회원가입"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chk_YNACCEPT" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="700dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="골든듀 회원가입"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="700dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="고객서비스 수신 동의"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/et_EMAIL" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="700dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="추가입력사항"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/chk_TM" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:text="E-MAIL"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품관련 홍모 및 이벤트 정보, 회원 특별혜택 안내를 받으시겠습니까?"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <CheckBox
        android:id="@+id/chk_EMAIL"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:text="Y"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <RadioGroup
        android:id="@+id/Gender"
        android:layout_width="103dp"
        android:layout_height="76dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toEndOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/btn_MAN"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="남성" />

        <RadioButton
            android:id="@+id/btn_WOMAN"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="여성" />
    </RadioGroup>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가 입력 사항을 작성해 주시면 생일 및 결혼기념일에 사용 가능한 축하 바우처를 발행해 드립니다."
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="생년월일"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/et_STORE"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/edt_DTBIRTH"
        android:layout_width="311dp"
        android:layout_height="46dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:ems="10"
        android:hint="ex)19991212  8자리로 입력해 주세요."
        android:maxLength="8"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <EditText
        android:id="@+id/edt_DTMARRY"
        android:layout_width="311dp"
        android:layout_height="47dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="ex)19991212  8자리로 입력해 주세요."
        android:maxLength="8"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/edt_DTBIRTH"
        app:layout_constraintTop_toBottomOf="@+id/edt_DTBIRTH" />

    <CheckBox
        android:id="@+id/chk_YNMARRY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="286dp"
        android:layout_marginLeft="286dp"
        android:text="Y"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edt_DTMARRY" />

    <TextView
        android:id="@+id/tx_SEX"
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/Gender"
        app:layout_constraintTop_toTopOf="@+id/Gender" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="80dp"
        android:text="개인정보 제공에 동의합니다."
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <CheckBox
        android:id="@+id/chk_YNACCEPT"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="60dp"
        android:text="Y"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/edt_DTMARRY" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중복확인"
        tools:layout_editor_absoluteX="346dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/et_storecode"
        android:layout_width="136dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/Gender"
        app:layout_constraintTop_toTopOf="@+id/Gender" />

</androidx.constraintlayout.widget.ConstraintLayout>
