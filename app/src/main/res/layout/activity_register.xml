<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/ScrollView1"

    android:layout_width="match_parent"

    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context="Goldendew_moblie.example.Goldendew_mobile.RegisterActivity"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="439dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="골든듀 회원가입"
        android:textColor="@color/white"
        android:textSize="30dp"
 />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/et_STORE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="이름"
            android:inputType="textPersonName"
            android:outlineAmbientShadowColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginLeft="39dp"/>

        <RadioGroup
            android:id="@+id/Gender"
            android:layout_width="103dp"
            android:layout_height="76dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@+id/et_STORE"
            app:layout_constraintTop_toTopOf="@+id/et_STORE">

            <RadioButton
                android:id="@+id/btn_MAN"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="남성"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/btn_WOMAN"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="여성"
                android:textColor="@color/white" />
        </RadioGroup>
    </LinearLayout>

    <EditText
        android:id="@+id/et_RESIDENT1"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="법정생년월일(6자리)"
        android:inputType="number"
        android:maxLength="6"
        android:textColorHint="@color/white"

        />

    <EditText
        android:id="@+id/et_CELLPHONE"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="휴대전화번호"
        android:inputType="phone"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_RESIDENT1"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btn_check"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="중 복 확 인"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_certificate"
            android:layout_width="150dp"
            android:layout_height="50dp"

            android:text="본 인 인 증"
            android:textSize="20dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_TXADDR1"
        android:layout_width="362dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="주소"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/et_CELLPHONE"
        app:layout_constraintTop_toBottomOf="@+id/et_CELLPHONE"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_TXADDR2"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="상세주소"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/et_TXADDR1"
        app:layout_constraintTop_toBottomOf="@+id/et_TXADDR1"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/et_EMAIL"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="이메일주소"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@+id/et_TXADDR2"
        app:layout_constraintTop_toBottomOf="@+id/et_TXADDR2"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="700dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="고객서비스 수신 동의"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/et_EMAIL"
        app:layout_constraintTop_toBottomOf="@+id/et_EMAIL" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="상품관련 홍모 및 이벤트 정보, 회원 특별혜택 안내를 받으시겠습니까?"

        android:textColor="@color/white"
        android:textSize="13dp"
        android:layout_gravity="center_vertical"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="E-MAIL"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <CheckBox
            android:id="@+id/chk_EMAIL"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Y"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_marginLeft="15dp"
            android:text="문자메시지"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/chk_SMS"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Y"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="전화"
            android:textColor="@color/white"
            android:textSize="15dp" />


        <CheckBox
            android:id="@+id/chk_TM"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Y"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/chk_DM"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:layout_marginLeft="15dp"
            android:text="카탈로그"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/chk_SMS" />


        <CheckBox
            android:id="@+id/chk_DM"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Y"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />
    </LinearLayout>




    <TextView
        android:id="@+id/textView9"
        android:layout_width="700dp"
        android:layout_height="50dp"
        android:text="추가입력사항"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/chk_TM" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가 입력 사항을 작성해 주시면 생일 및 결혼기념일에 사용 가능한 축하 바우처를 발행해 드립니다."
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        tools:layout_editor_absoluteY="694dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:text="생년월일"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <EditText
        android:id="@+id/edt_DTBIRTH"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ex)19991212  8자리로 입력해 주세요."
        android:inputType="date"
        android:maxLength="8"
        android:textColorHint="@color/white"
        android:textSize="15dp"
 />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결혼기념일/결혼예정일"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/chk_YNMARRY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:text="Y"
            android:textColor="@color/white"
 />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_DTMARRY"
        android:layout_width="253dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="ex)19991212  8자리로 입력해 주세요."
        android:inputType="date"
        android:maxLength="8"
        android:textColorHint="@color/white"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 제공에 동의합니다."
        android:textColor="@color/white"
        android:textSize="20dp"
/>

    <CheckBox
        android:id="@+id/chk_YNACCEPT"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:text="Y"
        android:textColor="@color/white" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="168dp"
        android:layout_height="53dp"
        android:text="회원가입"

        app:layout_constraintStart_toEndOf="@+id/chk_YNACCEPT"
        app:layout_constraintTop_toTopOf="@+id/chk_YNACCEPT"
        android:layout_gravity="center_horizontal"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        tools:layout_editor_absoluteX="393dp" />








    <TextView
        android:id="@+id/tx_SEX"
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/Gender"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />







    <TextView
        android:id="@+id/et_storecode"
        android:layout_width="136dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="TextView"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_check"
        app:layout_constraintTop_toBottomOf="@+id/Gender" />



</LinearLayout>
</ScrollView>
